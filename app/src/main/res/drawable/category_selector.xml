<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/transparent_grey">
    <!-- 选中状态 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue" /> <!-- 浅紫色背景 -->
            <stroke
                android:width="1dp"
                android:color="@color/blue"/> <!-- 紫色边框 -->
            <corners android:radius="15dp"/> <!-- 圆角 -->
        </shape>
    </item>

    <!-- 按压状态 -->
   <!-- <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> &lt;!&ndash; 浅灰色背景 &ndash;&gt;
            <corners android:radius="8dp"/>
        </shape>
    </item>-->

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light"/> <!-- 白色背景 -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
</ripple>